<h1>Editer un gossip</h1>

<%= form_for @gossip do |f| %>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

<div class="form-group">
<label>Titre du gossip</label> 
<%= f.text_field :anonymous_author, class: 'form-control'%>
</div>

<div class="form-group">
<label>Contenu du gossip</label> 
<%= f.text_area :content, class: 'form-control'%>

</div>
<div class="form-group">
<button type="submit" class="btn btn-dark">Modifier le gossip</button>
</div>
</div>
<div >
<a href="<%= gossip_path(@gossip.id) %>"  data-method="DELETE" data-confirm="Sur ?">Supprimer le gossip</a>

</div>


<%end%>

